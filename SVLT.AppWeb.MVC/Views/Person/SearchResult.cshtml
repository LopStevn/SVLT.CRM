@model IEnumerable<SearchResultPersonDTO.PersonDTO>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Name)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Age)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Height)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Birthdate)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthdate)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id=item.Id}) |
                    @Html.ActionLink("Ver", "Details", new { id=item.Id}) |
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>

